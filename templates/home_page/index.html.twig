{% extends 'base.html.twig' %}

{% block title %}Home Page
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #f5f5f5ff;
			padding: 2px 6px;
		}
	</style>

	<div class="container text-center">

		<h1 class="my-5 text-primary text-uppercase">Data List
		</h1>
		{# {{ controller_name }}! âœ…</h1> #}

		{% for message in app.flashes('notice')%}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<div class="row">

			<table class="table table-dark">
				<thead>
					<tr>
						<th class="col">#</th>
						<th class="col">Title</th>
						<th class="col">Content</th>

					</tr>
				</thead>
				<tbody>
					{% for data in data %}
						<tr>
							<th scope="row">{{ data.id }}</th>
							<td>{{ data.title }}</td>
							<td>{{ data.content }}</td>
							<td>
								<a href="{{ path('update_form', {'id': data.id }) }}" class="btn btn-warning">Edit</a>
								<a href="{{ path('delete_form', {'id': data.id }) }}" class="btn btn-danger">Delete</a>

							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="row">

			<a href="{{ path('app_createForm') }}" class="btn btn-primary col col-2 ">Add item</a>
		</div>
	</div>
{% endblock %}
