{% extends 'base.html.twig' %}

{% block title %}Home Page
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #f5f5f5ff;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Data List
		</h1>
		{# {{ controller_name }}! âœ…</h1> #}

		{% for message in app.flashes('notice')%}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}

		<table class="table">
			<thead>
				<tr>
					<th class="col">#</th>
					<th class="col">Title</th>
					<th class="col">Content</th>

				</tr>
			</thead>
			<tbody>
				{% for data in data %}
					<tr>
						<th scope="row">{{ data.id }}</th>
						<td>{{ data.title }}</td>
						<td>{{ data.content }}</td>
						<td>
							<a href="{{ path('form_edit', {'id': data.id }) }}" class="btn btn-warning">Edit</a>
							<a href="{{ path('form_delete', {'id': data.id }) }}" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
